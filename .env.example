# HMObility v4.0.0 - Variables de Entorno
# Copia este archivo a .env.local y completa los valores

# =====================================
# API Configuration
# =====================================
VITE_API_URL=/api

# =====================================
# ANALYTICS (Sprint 1 - CRÍTICO)
# =====================================

# Mixpanel - User behavior tracking
VITE_MIXPANEL_TOKEN=

# Google Analytics 4
VITE_GA_MEASUREMENT_ID=

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHATBOT=true
VITE_ENABLE_ZENDESK=false

# =====================================
# BACKEND & DATABASE
# =====================================

# Hugging Face API (para IA del chatbot)
HUGGINGFACE_API_KEY=

# Supabase (base de datos en tiempo real)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# =====================================
# MAPAS Y GEOLOCALIZACIÓN
# =====================================

# MapTiler
VITE_MAPTILER_KEY=

# Mapbox (opcional)
VITE_MAPBOX_TOKEN=

# =====================================
# NOTIFICACIONES PUSH
# =====================================

# Firebase Cloud Messaging
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_MESSAGING_SENDER_ID=

# =====================================
# EXTERNAL SERVICES
# =====================================

# SendGrid (Email)
VITE_SENDGRID_API_KEY=

# Sentry (Error tracking)
VITE_SENTRY_DSN=

# LogRocket (Session replay)
VITE_LOGROCKET_APP_ID=

# OpenWeather
VITE_OPENWEATHER_API_KEY=

# =====================================
# FEATURES FLAGS v4.0.0
# =====================================

# Habilitar Web Workers para simulaciones
VITE_ENABLE_WORKERS=true

# Habilitar Service Worker (PWA)
VITE_ENABLE_SW=true

# Debug mode
VITE_DEBUG_MODE=false

# =====================================
# NOTAS
# =====================================
# 1. NUNCA subas .env.local a Git
# 2. Variables VITE_* son públicas en el bundle
# 3. Regenera claves en producción
